        <item name="colorControlNormal">@color/gray</item>
    </style>
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">#00C835</item>
        <item name="colorControlActivated">#00C835</item>
    </style>
    <style name="Customprogress" parent="android:Theme.DeviceDefault.Dialog">
