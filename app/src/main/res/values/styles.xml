<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">#00C835</item>
        <item name="colorControlActivated">#00C835</item>
    </style>
    <style name="MyEditTextStyle2" parent="TextAppearance.AppCompat">
        <item name="colorControlActivated">#00C835</item>
        <item name="android:textColorHint">#00C853</item>
        <item name="colorControlNormal">#00c843</item>
        <item name="backgroundTint">#00c843</item>
        <item name="android:hint">#00c843</item>
        <item name="android:textColor">#00c843</item>
        <item name="android:background">#00c843</item>
        <item name="colorAccent">#00c843</item>
