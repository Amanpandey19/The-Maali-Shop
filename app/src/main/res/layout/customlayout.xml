<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="10dp"
    android:layout_marginBottom="20dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="@color/otherblue"
    android:backgroundTint="@color/otherblue"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imageviewcart"
            android:layout_width="118dp"
            android:layout_height="107dp"
            android:layout_marginTop="10dp"
            android:background="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="8">

                <TextView
                    android:id="@+id/namecart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="7"
                    android:textColor="@color/otherblue"
                    android:textSize="14sp"
                    app:fontFamily="@font/lato_italic" />

                <android.support.v7.widget.CardView
                    android:id="@+id/removeitem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/otherblue"
                    app:cardCornerRadius="10dp"
                    app:contentPadding="2dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:gravity="center"
                        android:text="Remove"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <TextView
                android:id="@+id/deliverycart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:text="Delivery"
                android:textColor="@color/otherblue"
                android:textSize="14sp"
                app:fontFamily="@font/lato_italic" />


            <TextView
                android:id="@+id/sizecart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:text="Size"
                android:textColor="@color/otherblue"
                android:textSize="14sp"
                app:fontFamily="@font/lato_italic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="7">

                <TextView
                    android:id="@+id/pricecart"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="6"
                    android:text="Price"
                    android:textColor="@color/otherblue"
                    android:textSize="27sp"
                    app:fontFamily="@font/lato_italic" />


                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/otherblue"
                    android:backgroundTint="@color/otherblue"
                    app:cardCornerRadius="5dp"
                    app:contentPadding="5dp">

                    <TextView
                        android:id="@+id/productqty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/otherblue"
                        android:backgroundTint="@color/otherblue"
                        android:text="Qty"
                        android:textColor="@color/white" />
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>