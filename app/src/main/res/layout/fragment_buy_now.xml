<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.aman.apps.aman.Fragments.BuyNow">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_marginLeft="15dp"
            android:id="@+id/final_name"
            android:textColor="@color/black"
            android:textSize="24dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address"
            android:layout_marginLeft="15dp"
            android:id="@+id/final_address"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone "
            android:layout_marginLeft="15dp"
            android:id="@+id/final_number"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textSize="20dp"
            />
            <android.support.v7.widget.CardView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                app:cardCornerRadius="5dp"
                android:background="@color/otherblue"
                android:backgroundTint="@color/otherblue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="match_parent"
                    android:id="@+id/changedeliverydetails"
                    android:backgroundTint="@color/otherblue"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:text="Change Delivery Details"
                    android:layout_height="wrap_content"
                    />
            </android.support.v7.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_height="1dp"
                android:background="@color/black"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <ListView
        android:id="@+id/items_to_buy"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="90dp"
        android:scrollbarSize="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
         android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="1dp"
                android:background="@color/black"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="20dp"
                app:contentPadding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="5"
                     android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Amount Payble"
                            android:textColor="@color/black"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/final_amount_payble"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text=" â‚¹"
                            android:textColor="@color/colorAccent"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        app:cardCornerRadius="5dp"
                        app:cardBackgroundColor="@color/green"
                        android:backgroundTint="@color/green"
                        android:layout_height="wrap_content">
                        <Button
                            android:id="@+id/final_proceed_buy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Buy "
                            android:textColor="@color/white"
                            android:background="@color/green"
                            android:textSize="18sp" />
                    </android.support.v7.widget.CardView>
                </LinearLayout>

            </android.support.v7.widget.CardView>
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</FrameLayout>
